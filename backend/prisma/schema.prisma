generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id          Int      @id @default(autoincrement())
  title       String
  price       Int? // Opcional, por si la IA no lo encuentra
  location    String?
  area        Int?
  rooms       Int?
  description String?
  sourceUrl   String   @unique // La URL original debe ser Ãºnica
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}